<div uk-grid class="uk-child-width-1 form-container">
  <div class="uk-card uk-card-default uk-card-body form-container-center">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <fieldset class="uk-fieldset">
        <legend class="uk-legend uk-margin-right">Log in</legend>
        <%= devise_error_messages! %>

        <div class="uk-margin">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, class: 'uk-input' %>
        </div>

        <div class="uk-margin">
          <%= f.label :username %><br/>
          <%= f.text_field :username, autofocus: true, class: 'uk-input' %>
        </div>

        <div class="uk-margin">
          <%= f.label :name %><br/>
          <%= f.text_field :name, autofocus: true, class: 'uk-input' %>
        </div>

        <div class="uk-margin">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off", class: 'uk-input' %>
        </div>

        <div class="uk-margin">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "off",class: 'uk-input' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "uk-button uk-button-primary" %>
        </div>
      </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>